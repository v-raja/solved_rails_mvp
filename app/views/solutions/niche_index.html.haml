-# = render 'layouts/header'
= render 'shared/niches/header', niche: @niche

%div{class: "mt-10 flex justify-center pb-10"}
  %div{class: "max-w-screen-lg w-full flex"}
    %div{class: "w-2/3 pr-12"}
      - if @niche.solutions.any?
        - if @niche.solutions.today.any?
          %div{class: "w-full font-bold text-2xl mb-6 leading-none"}
            Today
          = render @niche.solutions.today
          %div{class: "mt-6"}
        - if @niche.solutions.past_week.any?
          %div{class: "w-full font-bold text-2xl mb-6 leading-none"}
            Past Week
          = render @niche.solutions.past_week
          %div{class: "mt-6"}
        - if @niche.solutions.past_month.any?
          %div{class: "w-full font-bold text-2xl mb-6 leading-none"}
            Past Month
          = render @niche.solutions.past_month
      - else
        %div{class: "w-full font-semibold text-2xl leading-none text-center"}
          No solutions yet ðŸ˜ž
        -# %div{class: "mt-1"}
        -# = link_to "Create a new solution", new_solution_path, class: "text-blue-500 hover:underline"





    %div{class: "w-1/3 flex-shrink-0 flex flex-wrap"}
      %div{class: "w-full flex flex-wrap rounded-sm"}
        %div{class: ""}
          %div{class: " py-3 px-4 bg-white border border-gray-400 rounded"}
            %div{class: "w-full text-base font-bold text-sm text-secondary"}
              = "About #{niche_type}"
            %div{class: "py-1 w-full rounded-lg text-sm"}
              = simple_format @niche.description.gsub(/\n/, '<br/>').html_safe
