%div{class: "bg-white border-t border-gray-300 fixed w-full bottom-0 z-40 md:hidden"}
  %div{class: "grid #{user_signed_in? ? "grid-cols-5" : "grid-cols-4"} border-0 px-4 py-3"}
    = link_to all_path do
      - active = params[:controller] == "home" && params[:action] == "all"
      %div{class: "group text-gray-800 transition cursor-pointer flex flex-col items-center"}
        %div{class: "-m-2 p-2 group-hover:bg-gray-200 rounded-full"}
          %div{class: "w-5 h-5 #{active ? "text-secondary" : nil}"}
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z" />
            </svg>
        %div{class: "text-xxs mt-0.5 #{active ? "text-black font-semibold" : nil}"}
          Popular
    - if user_signed_in?
      = link_to home_path do
        - active = params[:controller] == "home" && params[:action] != "all"
        %div{class: "group text-gray-800 transition cursor-pointer flex flex-col items-center"}
          %div{class: "-m-2 p-2 group-hover:bg-gray-200 rounded-full"}
            %div{class: "w-5 h-5 #{active ? "text-secondary" : nil}"}
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
          %div{class: "text-xxs mt-0.5 #{active ? "text-black font-semibold" : nil}"}
            Home
    = link_to search_solutions_path, "data-turbolinks": false do
      - active = params[:controller] == "search" && params[:action] == "solutions"
      %div{class: "group text-gray-800 transition cursor-pointer flex flex-col items-center"}
        %div{class: "-m-2 p-2 group-hover:bg-gray-200 rounded-full"}
          %div{class: "w-5 h-5 #{active ? "text-secondary" : nil}"}
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
        %div{class: "text-xxs mt-0.5 flex #{active ? "text-black font-semibold" : nil}"}
          Search Solutions

    -# %div{class: "focus:outline-none group text-gray-800 active:bg-gray-100 transition cursor-pointer flex flex-col items-center"}
    -#   %div{class: "-m-2 p-2 group-hover:bg-gray-200 rounded-full"}
    -#     %div{class: "w-5 h-5"}
    -#       <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
    -#       <path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z" />
    -#       <path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd" />
    -#       </svg>
    -#   %div{class: "text-xxs mt-0.5 flex"}
    -#     Request

    %div{class: "md:block relative text-gray-900", "data-controller": "dropdown", "data-dropdown-active-class": "", "data-dropdown-active-target": '#activeTarget6'}
      %div{class: "focus:outline-none group text-gray-800 active:bg-gray-100 transition cursor-pointer flex flex-col items-center"}
        %div{"data-action": "click->dropdown#toggle click@window->dropdown#hide", role: "button", class: "inline-block select-none rounded-full group-hover:bg-gray-200"}
          %div{id: "activeTarget6", class: "w-5 h-5 text-gray-800 rounded-full "}
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z" />
            <path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd" />
            </svg>
        %div{class: "text-xxs mt-0.5 flex"}
          Request

      %div{"data-dropdown-target": "menu", class: "absolute bottom-0 -right-20 hidden mb-12"}

        = form_with url: :mini_requests, method: :post, remote: true, html: {class: "rounded border border-gray-300 bg-white w-72 sm:w-80 p-4 shadow-md"} do |f|
          %div{id: "request_box_mobile", class: "text-xs"}
            %div{class: "w-full"}
              solved is new so you're unlikely to currently find interesting solutions for your industry / occupation, but we're keen to help. <br/><br/>
              Tell us about who you are / what you do and we'll send you an email with interesting solutions for you. <br/>
              (if you have have a problem in mind, let us know)


            %textarea{rows: "4", name: "mini_request[description]",
                  class: "mt-4 placeholder-gray-600 w-full block text-gray-900 text-xs rounded-md border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50",
            placeholder: "Let us know about a daily task that you find painful..."}
            - if !user_signed_in?
              %input{type: "email", name: "mini_request[email]",
                placeholder: "Email",
                autocomplete: "email",
                class: "mt-2 block placeholder-gray-600 text-xs w-full text-gray-900 rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 hover:border-indigo-300 hover:ring hover:ring-indigo-200 hover:ring-opacity-50"}
            = f.submit "Send", class: "mt-2 flex-shrink-0 py-2 px-3 sm:mx-0 sm:px-4 bg-primary text-white rounded cursor-pointer hover:bg-opacity-90"


    %button{"data-action": "click@window->slideover#hide click->slideover#toggle", class: "focus:outline-none group text-gray-800 active:bg-gray-100 transition cursor-pointer flex flex-col items-center"}
      %div{class: "-m-2 p-2 group-hover:bg-gray-200 rounded-full"}
        %div{class: "w-5 h-5"}
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
      %div{class: "text-xxs mt-0.5 flex"}
        More
