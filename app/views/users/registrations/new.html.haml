%div{class: "h-screen overflow-hidden"}
  %div{class: "flex flex-wrap justify-center h-full"}
    %div{class: "hidden lg:block lg:h-1/5 w-full"}
    -# 2 Column
    %div{class: "max-w-screen-sm lg:max-w-screen-lg w-full h-full relative flex flex-wrap px-6 lg:flex-nowrap"}
      -# Left Column
      %div{class: "w-full lg:w-1/2 mt-16"}
        %div{class: "fill-current h-8 w-48"}
          -# Logo
          = link_to root_path do
            = svg_tag "logo"
        %div{class: "mt-9 text-2xl"}
          Find better solutions to your problems.
          -# Find solutions tailored to you.
      %div{class: "w-full lg:w-1/2"}
        %div{class: "lg:ml-24 bg-white pt-4 pb-6 shadow-lg rounded-lg"}
          = form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: "flex flex-col items-center w-full px-4"} do |f|
            -# %div{class: "text-primary font-medium text-2xl"}
            -#   Sign Up
            = f.text_field :name, placeholder: "Name", autofocus: true, autocomplete: "name", class: "w-full py-3 rounded-md border-gray-400 focus:border-indigo-300"
            %div{class: "mt-3"}
            = f.email_field :email, placeholder: "Email", autocomplete: "email", class: "w-full py-3  rounded-md border-gray-400 focus:border-indigo-300"
            %div{class: "mt-3"}
            = f.password_field :password, placeholder: "Password #{@minimum_password_length ? "(#{@minimum_password_length} characters minimum)" : nil}", autocomplete: "new-password", class: "w-full py-3 rounded-md border-gray-400 focus:border-indigo-300"
            -# %div{class: "mt-3"}
            -# = f.password_field :password_confirmation, placeholder: "Password Confirmation", autocomplete: "new-password", class: "w-full py-3 rounded-md border-gray-400 focus:border-indigo-300"
            %div{class: "mt-3"}
            = f.submit "Sign Up", class: "text-center font-bold text-white py-2.5 w-full bg-primary rounded-md text-xl hover:bg-opacity-90 cursor-pointer"
            %div{class: "mt-4 w-full justify-center"}
            = link_to "Log In instead", new_session_path(resource_name), class: "text-primary text-sm font-medium hover:underline"
            %div{class: "mt-4 border-b w-full border-gray-400"}
            %div{class: "mt-6 flex"}
              = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "font-medium text-center text-secondary hover:underline"
