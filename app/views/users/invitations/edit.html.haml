              = f.email_field :email, disabled: true, placeholder: "Email", class: "text-gray-900 cursor-not-allowed select-none w-full py-3  rounded-md border-gray-400 focus:border-indigo-300"
              %div{class: "mt-3"}
              = f.password_field :password, placeholder: "New password", autocomplete: "new-password", class: "w-full py-3 rounded-md border-gray-400 focus:border-indigo-300"
