          %div{class: "w-full text-lg font-medium mt-8 flex items-center"}
            Short bio
            .ml-2.text-gray-600.font-normal.text-sm
              = "- optional"

          %div.w-full.mt-2
            = f.text_field :bio, class: "w-full py-3 rounded-md border-gray-400 focus:border-indigo-300", placeholder: "Marketing @ FoodCompany / Engineer @ XYZ"
