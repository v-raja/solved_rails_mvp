    = form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f|
      -# = render "users/shared/error_messages", resource: resource
      = f.hidden_field :invitation_token, readonly: true


      %div{class: "mt-10 w-full grid grid-cols-2 items-center"}
        -# flex items-center flex-wrap px-6 md:flex md:flex-nowrap
        -# Left Column
        %div{class: "w-full"}
          = image_tag resource.thumbnail_url, class: "rounded-full h-40 w-40 object-cover"
          %div{class: "w-full mt-4"}
            .font-medium
              .flex.items-center
                Thumbnail link
                .ml-2.text-gray-600.font-normal.text-sm
                  = "- optional"
              (ex: Twitter, GitHub thumbnails) <br/>
            -# .text-sm
            -#   (Leave blank to update automatically)
            = f.text_field :thumbnail_url, value: "#{is_oxro_url?(resource.thumbnail_url) ? nil : resource.thumbnail_url}", class: "w-full mt-3 py-3 rounded-md border-gray-400 focus:border-indigo-300", placeholder: "https://"
