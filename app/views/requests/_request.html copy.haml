= link_to request do
  %div{class: "flex bg-white rounded-lg border border-gray-400"}
    %div{class: "py-2 w-12 flex-shrink-0 flex flex-col place-items-center bg-gray-100"}
      %div{class: "text-sm leading-none"}
        ▲
      %div{class: "font-semibold"}
        = upvote_count(request)
    %div{class: "pl-3 pr-9 py-2 flex flex-col leading-none"}
      %div{class: "text-xs text-gray-500"}
        = "by #{request.user.name}"
      %div{class: "font-bold pt-1"}
        = request.title
      %div{class: "pt-3"}
        = request.description.gsub(/\n/, '<br/>').html_safe
      %div{class: "flex items-center text-xs px-2 py-1 text-gray-700 font-semibold w-min rounded-lg",
           hover: "bg-gray-100"}
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
        <path d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z" />
        <path d="M15 7v2a4 4 0 01-4 4H9.828l-1.766 1.767c.28.149.599.233.938.233h2l3 3v-3h2a2 2 0 002-2V9a2 2 0 00-2-2h-1z" />
        </svg>
        %div{class: "flex-shrink-0 ml-1 "}
          = "#{pluralize(request.root_comments.count, 'Comment')}"

