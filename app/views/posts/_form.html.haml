= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :problem_title
    = f.text_field :problem_title
  .field
    = f.label :tagline
    = f.text_field :tagline
  .field
    = f.label :description
    = f.text_area :description
  .field
    -# = f.label :youtube_url
    -# = f.text_field :youtube_url
  .field
    = f.label :product_url
    = f.text_field :product_url
  .actions
    = f.submit 'Save'
