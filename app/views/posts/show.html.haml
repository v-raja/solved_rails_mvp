= render 'layouts/header', render_shadow: false
%div{class: "mt-10 flex flex-wrap justify-center pb-20"}

  -# Logo, problem, product, and posted_to banner
  %div{class: "max-w-screen-lg w-full relative flex overflow-hidden"}
    %div{class: "w-full mr-12"}
      %div{class: "w-full flex"}
        %div{class: "w-28 h-28 flex-shrink-0"}
          = image_tag @post.product.logo_url
        %div{class: "ml-4 w-full flex flex-col justify-between"}
          %div
            - exclude = ["and", "or", "the", "over", "to", "the", "a", "but", "of", "as", "for"]
            %div{class: "w-full font-medium"}
              = @post.problem_title.titleize(exclude: exclude)
            %div{class: "mt-1 text-gray-700 text-sm leading-none"}
              = link_to "with #{@post.product.name}", @post.product_url, class: "hover:text-black"
          -# %div
          %div{class: "overflow-auto disable-scrollbars"}
            - if @post.industries.any?
              %div{class: "flex-shrink-0 mt-1 flex items-center w-max text-xs text-gray-600"}
                %div{class: ""}
                  Industries
                - @post.industries.each do |industry|
                  = link_to industry do
                    %div{class: "ml-1 text-gray-600 text-xs border border-gray-400 px-1 py-0.5 bg-white rounded-sm hover:text-gray-900 hover:border-gray-700"}
                      = industry.title
            - if @post.occupations.any?
              %div{class: "mt-1 flex items-center w-max text-xs text-gray-600 pr-4"}
                %div{class: ""}
                  Occupations
                - @post.occupations.each do |occupation|
                  = link_to occupation do
                    %div{class: "flex-shrink-0 ml-1 text-gray-600 text-xs border border-gray-400 px-1 py-0.5 bg-white rounded-sm hover:text-gray-900 hover:border-gray-700"}
                      = occupation.title

    %div{class: "w-1/3 flex-shrink-0 flex flex-wrap"}

  -# 2 Column, Left Column
  %div{class: "mt-8 max-w-screen-lg w-full relative flex"}
    %div{class: "w-full mr-12"}
      -# Gallery
      %div{class: "bg-white p-4 block"}
        %div{class: "aspect-w-7 aspect-h-4"}
          %div{class: "flex flex-col w-full h-full overflow-y-auto space-y-2"}
            = render @post.youtube_urls

        %div{class: "mt-2 flex space-x-2"}
          - @post.youtube_urls.each_with_index do |yt_utl, idx|
            = image_tag "http://img.youtube.com/vi/#{yt_utl.youtube_id}/0.jpg", class: "cursor-pointer w-24 h-14 object-cover", onclick: "document.getElementById(\"#{idx}-video\").scrollIntoView();"
        %div{class: "mt-4 pt-4 border-t border-gray-200 text-sm"}
          = @post.description
        %div{class: "mt-3 text-sm"}
          Have a question about this solution? Discuss below.
        -# = <iframe width="#{width}" height="#{height}" src="http://www.youtube.com/embed/#{video_id}"       frameborder="0"></iframe>



      -# Discussion header
      %div{class: "mt-10 flex justify-between"}
        %div{class: "uppercase font-medium text-gray-600 text-xs"}
          Discussion
        %div{class: "uppercase font-medium text-blue-600 text-xs"}
          Follow Discussion

      -# Discussion section
      %div{class: "mt-6 bg-white rounded-sm p-4 flex flex-wrap"}
        %div{class: "w-full flex flex-wrap justify-between text-center py-10"}
          %div{class: "text-3xl w-full"}
            ðŸ’¬
          %div{class: "mt-1 text-base font-medium w-full"}
            Be the first to comment
        %div{class: "border-t border-gray-400 py-4 flex"}
          %div{class: "bg-red-400 rounded-full w-8 h-8"}
          %div{class: "ml-4 text-xs text-gray-600 flex h-full justify-center"}
            %div{class: "border border-gray-400"}
              What did you like about the solution? What would you like more clarification on?




    %div{class: "w-1/3 flex-shrink-0 flex flex-col"}
      %div{class: "flex"}
        %div{class: "w-2/5 flex-shrink-0"}
          = link_to @post.product_url do
            %div{class: "uppercase py-4 bg-white text-gray-900 font-medium flex items-center justify-center border border-gray-300 rounded-sm leading-none text-sm"}
              GET IT

        %div{class: "ml-4 w-full"}
          = link_to @post.product_url do
            %div{class: "uppercase py-4 bg-white text-gray-900 font-medium flex items-center justify-center border border-gray-300 rounded-sm leading-none text-sm"}
              â–²
              %div{class: "ml-2"}
                upvote

      -# Maker / Hunter
      %div{class: "mt-4 p-4 w-full text-sm bg-white rounded-sm flex flex-wrap border border-gray-300"}
        %div{class: "w-full uppercase text-gray-600 text-xs"}
          Solver
        %div{class: "mt-4 w-full flex"}
          %div{class: "object-fill rounded-full w-8 h-8 bg-red-100 flex-shrink-0"}
          %div{class: "ml-2 flex flex-wrap justify-between"}
            %div{class: "w-full text-xs text-black font-medium"}
              Vivek Raja
            %div{class: "text-xs text-gray-600"}
              Product Manager @ Yashar Palace
        %div{class: "mt-6 w-full uppercase text-gray-600 text-xs"}
          Product
        %div{class: "mt-4 w-full flex"}
          %div{class: "object-fill rounded-full w-8 h-8 bg-red-100 flex-shrink-0"}
          %div{class: "ml-2 flex flex-wrap justify-between"}
            %div{class: "bg-white w-1"}
            %div{class: "w-full text-sm text-black leading-none"}
              = @post.product.name

