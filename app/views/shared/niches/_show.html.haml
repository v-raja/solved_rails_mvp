= render 'layouts/header'
= render 'shared/niches/header', niche: niche

%div{class: "mt-10 flex justify-center pb-10"}
  %div{class: "max-w-screen-lg w-full relative flex"}
    %div{class: "w-full mr-12"}
      - if niche.posts.today.any?
        %div{class: "w-full font-bold text-2xl mb-6 leading-none"}
          Today
        %div{class: "divide-y divide-gray-300 divide-solid rounded-sm"}
          = render niche.posts.today
          = render niche.posts.today
      - if niche.posts.past_week.any?
        %div{class: "w-full font-bold text-2xl mb-6 leading-none"}
          Past Week
        %div{class: "divide-y divide-gray-300 divide-solid"}
          = render niche.posts.past_week
      - if niche.posts.past_month.any?
        %div{class: "w-full font-bold text-2xl mt-6 mb-6 leading-none"}
          Past Month
        %div{class: "divide-y divide-gray-300 divide-solid"}
          = render niche.posts.past_month




    %div{class: "w-1/3 flex-shrink-0 flex flex-wrap"}
      %div{class: "w-full flex flex-wrap bg-white rounded-sm"}
