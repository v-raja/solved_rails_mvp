= link_to solution do
  %div{class: "mt-4 flex bg-white rounded-sm border border-gray-400",
       hover: "border-gray-900"}
    = link_to solution do
      %div{class: "py-2 w-12 flex-shrink-0 flex flex-col place-items-center bg-gray-100 h-full"}
        %div{class: "text-sm leading-none px-1 py-1 rounded",
            hover: "bg-gray-400 text-primary"}
          â–²
        %div{class: "font-semibold leading-none"}
          = upvote_count(solution)
    %div{class: "flex flex-wrap w-full"}
      %div{class: "mt-2 pl-3 text-xs text-gray-600 flex flex-wrap"}
        -# - niche = request.industries.first || request.occupations.first
        -# .hover:text-black.flex-shrink.truncate.font-medium.text-black.hover:underline
        -#   = link_to "#{niche.title}", niche
        -#   -# = niche.title
        -# .mx-1
        -#   &middot;
        .hover:text-black.flex-shrink-0
          = solution.user.name
        .ml-2.flex-shrink-0.hover:underline.hover:text-black
          = link_to "#{time_ago_in_words(solution.created_at)} ago", solution
          -# = "#{time_ago_in_words(request.created_at)} ago"

      %div{class: "flex flex-wrap w-full"}
        = link_to solution do
          %div{class: "pl-3 pr-9 font-semibold mt-2 w-full two-lines-only"}
            = solution.title

        -# %div{class: "aspect-w-7 aspect-h-4 flex"}
        %div{class: "mt-4 pl-3 pr-9 flex flex-col w-full overflow-y-auto space-y-2"}
          %div{class: "aspect-w-16 aspect-h-9 w-full flex-shrink-0"}
            %iframe{class: "h-full w-full",
                      src: "https://www.youtube.com/embed/#{solution.youtube_urls.first.youtube_id}",
                      frameborder: "0",
                      allowFullScreen: "1"}
            -# = render solution.youtube_urls.first
        = link_to solution do
          %div{class: "mt-4 pl-3 pr-9 mt-1 read-more w-full"}
            = solution.description.gsub(/\n/, '<br/>').html_safe
          %div{class: "ml-3 mr-9 px-1 mt-2 mb-2 w-full flex items-center text-xs px-1 text-gray-700 font-semibold w-min rounded-lg",
              hover: "bg-gray-300"}
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-6 h-6">
            <path d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z" />
            <path d="M15 7v2a4 4 0 01-4 4H9.828l-1.766 1.767c.28.149.599.233.938.233h2l3 3v-3h2a2 2 0 002-2V9a2 2 0 00-2-2h-1z" />
            </svg>
            %div{class: "flex-shrink-0 ml-1 "}
              = "#{pluralize(solution.root_comments.count, 'Comment')}"


